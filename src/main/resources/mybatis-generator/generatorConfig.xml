<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <classPathEntry location="lib/mysql-connector-java-5.1.38.jar"/>
    <!--也可使用命令mvn mybatis-generator:generate-->
    <context id="ormgenerator" targetRuntime="MyBatis3">

        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>


        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/yui" userId="song" password="123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.yui.model"
                            targetProject="doc/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="com.yui.mapper"
                         targetProject="doc/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.yui.dao"
                             targetProject="doc/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="%"/>

        <!-- <table tableName="user_t" domainObjectName="User_T">
        </table>
		<table tableName="user_t" domainObjectName="User_T">
        </table>
		 <table tableName="user_t" domainObjectName="User_T">
        </table>
		 <table tableName="user_t" domainObjectName="User_T">
        </table> -->

    </context>
</generatorConfiguration>